// -*- jsonc -*-
{
  "extends": "@foxglove/tsconfig/base",
  "include": ["**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "outDir": "dist",
    "lib": ["es2022", "dom"],
    "jsx": "preserve",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  }
}
