{
  "extends": "@lichtblick/tsconfig/base",
  "compilerOptions": {
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "checkJs": false,
    "outDir": "dist",
    "emitDeclarationOnly": true,
    "declarationMap": false
  }
}
